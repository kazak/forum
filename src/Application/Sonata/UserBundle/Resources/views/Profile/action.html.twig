{% extends "WebBundle::pagelayout.html.twig" %}

{% block metateg %}
    <meta name="description"
          content="ОСМД, осбб, кооперативы, {{ "title_user_account" | trans({}, 'SonataUserBundle')}}, {{ app.user.username }}"
    />

    <meta name="keywords"
          content="ОСМД, осбб, кооператив, город, область, председатель, жилищно-комунальные услуги, {{ "title_user_account" | trans({}, 'SonataUserBundle')}}, {{ app.user.username }}"
    />
{% endblock %}

{% block title %}
    {{ "title_user_account" | trans({}, 'SonataUserBundle')}} - {{ app.user.username }}
{% endblock %}

{% block content %}
    <div id="start_page">
        <div class="row">
            <div class="col-sm-10 col-md-offset-1">
                <h2>{% block sonata_profile_title %}
                        {{ "title_user_account" | trans({}, 'SonataUserBundle')}}
                        {{ app.user.username }}
                    {% endblock %}
                </h2>
                <div class="sonata-user-show row row-fluid">
                    <div class="span2 col-lg-2" style="padding: 8px 0;">
                        {% block sonata_profile_menu %}
                            {{ sonata_block_render({'type': 'sonata.user.block.menu'},
                            {'current_uri': app.request.requestUri}) }}
                        {% endblock %}
                    </div>

                    <div class="span10 col-lg-10">
                        {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}

                        {% block sonata_profile_content '' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
