<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">{{ 'title_user_registration'|trans({}, 'SonataUserBundle') }}</h2>
    </div>
    <div class="panel-body">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }}
              method="POST" class="fos_user_registration_register form-horizontal">
            {% for child in form %}
                {% if not child.children %}
                    <div class="form-group">

                        {% if child.vars.name != '_token' %}
                            {{ form_label(child) }}
                        {% endif %}
                        <div class="col-sm-8">
                            {{ form_widget(child) }}
                        </div>
                    </div>
                {% else %}
                    {% for children in child %}
                        <div class="form-group">
                            {{ form_label(children) }}
                            <div class="col-sm-8">
                                {{ form_widget(children) }}
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endfor %}

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <input type="submit" id="_submit" name="_submit" class="btn btn-primary"
                           value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}"/>
                </div>
            </div>
        </form>
    </div>
</div>