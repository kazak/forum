{% extends "WebBundle::pagelayout.html.twig" %}

{% block page_head_js %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div id="start_page">
        <div class="row">

            <!-- блок поиска и создания организации -->
            <div class="col-lg-10 col-lg-offset-1 regions_block">
                <h1>Найдите ваш дом</h1>
                <div class="row">
                    <div class="col-lg-5">
                        <label form="regions">Ваш Регион</label>
                        <p>
                            <select id="regions" name="regions" autocomplete="off">
                                <option selected="selected">---</option>
                                {% for region in regions %}
                                    <option value="{{ region.id }}">{{ region.title }}</option>
                                {% endfor %}
                            </select>
                        </p>
                    </div>
                    <div class="col-lg-5">
                        <label form="cities">Ваш город</label>
                        <p>
                            <select id="cities" name="cities" disabled>
                            </select>
                        </p>
                    </div>
                    <div class="col-lg-2">
                        <label form="newOrganize">Создать</label>
                        <p>
                            <button id="newOrganize" style="color:#000;">+</button>
                        </p>
                    </div>
                </div>
                <div id="block_with_organize" style="display: none;">
                    <hr/>
                    <div class="input-group col-lg-2 col-lg-offset-10">
                        <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term"
                               style="height: 30px; padding: 0px 15px">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit" style="height: 30px; padding: 0px 15px">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row" id="organizes"></div>
                </div>
            </div>

            <!-- блок говостей -->
            <div id="quote" class="col-sm-10 col-md-offset-1 news_block" style="background: #f69410">
                <div class="read_all">
                    <a href="{{ path('web_news') }}"> Все новости</a>
                </div>

                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for key, new in news %}
                        <blockquote class="blockquote{% if key is even %}-reverse{% endif %}">
                            <div role="tab" id="heading_{{ new.id }}">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_{{ new.id }}"
                                   aria-expanded="false" aria-controls="collapse_{{ new.id }}">
                                    {{ new.title }}
                                </a>
                            </div>
                            <div id="collapse_{{ new.id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_{{ new.id }}">
                                <div class="panel-body">
                                    {{ new.description}}
                                </div>
                            </div>
                        </blockquote>
                    {% endfor %}
                </div>


            </div>
            <div class="col-sm-10 col-md-offset-1" style="background: #2c3e50">
                <div class="row placerem">
                    {% for i in 0..11 %}
                        <div class="col-md-3 ">
                            <div class="blog_news">
                                <h2>Tittle</h2>
                                <span>
                                lorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsum
                            lorem ipsumlorem ipsumlorem ipsumlorem ipsum
                            lorem ipsumlorem ipsumlorem ipsum
                            lorem ipsumlorem ipsumlorem ipsum
                            </span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-sm-10 col-md-offset-1" style="background: #F6A910">
                <div class="row contact">
                    <div class="col-md-2 col-md-offset-1 news">
                        <img src="/bundles/web/images/phone.png" class="tossing" style="">
                        <br/>
                        <span><a href="tel:0631392958">0(63)139-29-58</a> </span>
                    </div>
                    <div class="col-md-2 col-md-offset-2 news">
                        <img src="/bundles/web/images/mail.png" class="tossing">
                        <br/>
                        <span><a href="mail:dmitreysergeevich86@gmail.com">dmitreysergeevich86@gmail.com</a> </span>
                    </div>
                    <div class="col-md-2 col-md-offset-2 news">
                        <img src="/bundles/web/images/pin.png" class="tossing">
                        <br/>
                        <span>Одесса Армейская 8в </span>

                    </div>
                </div>
            </div>
            <div class="col-sm-10 col-md-offset-1">
                <div class="row regions">
                    {% for i in 0..2 %}

                        <div class="col-md-4 news">
                            <div class="carousel slide" data-ride="carousel">
                                <!-- Wrapper for slides -->
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img src="/images/odessa.jpg" alt="Chania">
                                    </div>

                                    <div class="item">
                                        <img src="/images/odessa.jpg" alt="Chania">
                                    </div>

                                    <div class="item">
                                        <img src="/images/odessa.jpg" alt="Flower">
                                    </div>

                                    <div class="item">
                                        <img src="/images/odessa.jpg" alt="Flower">
                                    </div>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="col-sm-10 col-md-offset-1" style="background: #F6A910">
                <div class="row placevar">
                    {% for partner in partners%}
                        <a href="">
                            <div class="col-md-4 ">
                                <div class="blog_news">
                                    <img src="{{ partner.getWebPath }}" >
                                    <h2>{{ partner.title }}</h2>
                                    <span>
                                {{ partner.description|raw }}
                            </span>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>

            <div class="col-sm-10 col-md-offset-1 news_block" style="background: #f69410">
                <div class="read_all">
                    <a href="{{ path('web_news') }}">Полезное</a>
                </div>
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    {% for new in news %}
                        <div class="state">
                            <div class="panel-heading" role="tab" id="heading_{{ new.id }}_state">
                                <h4 class="panel-title">
                                    <a role="button" data-toggle="collapse" data-parent="#accordion"
                                       href="#collapse_{{ new.id }}_state"
                                       aria-expanded="false" aria-controls="collapse_{{ new.id }}_state">
                                        {{ new.title }}
                                    </a>
                                </h4>
                            </div>
                            <div id="collapse_{{ new.id }}_state" class="panel-collapse collapse" role="tabpanel"
                                 aria-labelledby="heading_{{ new.id }}_state">
                                <div class="panel-body">
                                    {{ new.description}}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% block footer_js %}
        {{ parent() }}
        <script src="{{ asset('js/vendor/knockout-3.4.0.js') }}"></script>
    {% endblock %}
    <script>
        var cities = [];
        $('#regions').on('change', function() {
            var id = $('#regions').val();
            console.log(id);
            $.ajax({
                url: '{{ path('get_index_cities') }}/'+id
            }).done(function (data) {
                var l = data.length,
                    options = '<option>---</option>';
                for (var i = 0; i < l; i++) {
                    options += '<option value="'+ data[i].id +'">'+ data[i].title +'</option>'
                }
                $('#cities').html(options);
                $('#cities').attr('disabled', false);
                $('#block_with_organize').show();
                cities = data;
            });
        });
    </script>
{% endblock %}