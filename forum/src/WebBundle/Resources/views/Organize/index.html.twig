{% extends "WebBundle::pagelayout.html.twig" %}

{% block page_head_js %}
    {{ parent() }}

{% endblock %}
{% block title %}
    Соседи {{ organize.title }}
{% endblock %}
{% block content %}

    <div id="start_page">
        <div class="row">
            {% if organize.showMessage %}
                <div class="alert alert-danger" style="margin-bottom: 3px">
                    <p class="text-center">
                        <strong>Внимание!</strong>
                    </p>
                    <p class="text-center">
                        {{ organize.message }}
                    </p>
                </div>
            {% endif %}
            {#--------------------------------------------------- Левое меню -----------------------------------------------------#}
            <div class="col-sm-2" style="background: #2c3e50; border: 1px solid #fff; padding: 0 0 0 2%; color: white">
                <h4>
                    <span class="glyphicon glyphicon-home"> {{ organize.title }}</span>
                </h4>
                <h5>
                <span class="glyphicon glyphicon-globe">
                    {{ organize.city.title }}
                    <br><br>
                    {{ organize.address }}
                </span>
                </h5>
                {% if organize.lng and organize.lat %}

                {% endif %}
                <hr>
                <h5>
                <span class="glyphicon glyphicon-user">
                    Администрация:
                </span>
                    <br><br>
                    {% for admin in organize.admin %}
                        <p>{{ admin.title }}:   {{ admin.owner.username }}</p>

                    {% endfor %}
                </h5>
                <hr>
                {% if organize.gallery %}
                    <h5>
                    <span class="glyphicon glyphicon-picture">
                        Галлерея
                    </span>
                    </h5>
                {% endif %}
            </div>

            {#------------------------------------------------- Основная иныормация ----------------------------------------------#}

            <div class="col-sm-10" style="background: #2c3e50; border: 1px solid #fff">
                <div class="row placerem">
                    {% if organize.forums %}
                        {% for forum in organize.forums %}
                            <div class="col-md-12 ">
                                <div class="blog_forum">
                                    <h4>{{ forum.title }}:</h4>{{ forum.description|raw }}
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% javascripts
    'bundles/web/js/map_index.js'
    %}
    <script src="{{ asset_url }}"></script>


    {% endjavascripts %}
{% endblock %}